<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= beer.brewery.name %>
  </p>

  <p>
  <% if beer.ratings.empty? %>
    beer has not yet been rated!
  <% else %>
    Beer has <%= pluralize(beer.ratings.size, 'rating') %> with an average of <%= (beer.average_rating).to_f %>
  <% end %>
  </p>

</div>
