<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
  </h2>

  <i>
    Established in
    <%= brewery.year %> 
  </i>

  <p>
    Beers count
    <%= brewery.beers.count %> 
  </p>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>

  <p>
  <% if not brewery.ratings.empty? %>
    Brewery has <%= pluralize(brewery.ratings.size, 'rating') %> with an average of <%= brewery.average_rating.to_f %>
  <% end %>
  </p>

</div>
